<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constLay_main_content"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txtV_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calendar Provider Playground"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/txtV_selected_calendar_data"
        app:layout_constraintTop_toBottomOf="@id/txtV_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Please select a calendar to work with..."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        />
    <LinearLayout
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/txtV_selected_calendar_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/linLay_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/bnt_create_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create event"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />
        <EditText
            android:id="@+id/edTxtV_event_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/linLay_custom_data"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/linLay_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="Enter custom data:"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            />
        <LinearLayout
            android:id="@+id/linLay_custom_data_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Key:"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:layout_weight="3"
                />
            <EditText
                android:id="@+id/edTxt_key"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/linLay_custom_data_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Value:"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:layout_weight="3"
                />
            <EditText
                android:id="@+id/edTxt_value"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="8dp"
            android:id="@+id/btn_submit_custom_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to event"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linLay_show_event_data"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/linLay_custom_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_query_event_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get event data"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/txtV_event_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>